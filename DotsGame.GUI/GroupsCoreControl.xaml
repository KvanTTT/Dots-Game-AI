<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="DotsGame.GUI.GroupsCoreControl">
    <StackPanel Spacing="5">
        <CheckBox>Strong Groups</CheckBox>
        <CheckBox>Fragile Groups</CheckBox>
        <StackPanel Orientation="Horizontal" >
            <CheckBox>
                Max Linked Distance
            </CheckBox>
            <TextBox Margin="5,0,5,0"  Width="100">3</TextBox>
        </StackPanel>
        <Button Command="{Binding ShowCrosswisesCommand}">
            Show Crosswises
        </Button>
    </StackPanel>
</UserControl>