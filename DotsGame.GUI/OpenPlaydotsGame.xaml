<Window xmlns="https://github.com/avaloniaui" Width="400" Height="120"  SizeToContent="WidthAndHeight"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="DotsGame.GUI.OpenPlaydotsGame" >
    <StackPanel Spacing="10">
      <TextBlock>Playdots (Vk) game Url or Id</TextBlock>
      <TextBox Name="InputTextBox" ></TextBox>
      <Grid ColumnDefinitions="*,10,*">
        <Button Name="OkButton">OK</Button>
        <Button Grid.Column="2" Name="CancelButton">Cancel</Button>
      </Grid>
    </StackPanel>
</Window>